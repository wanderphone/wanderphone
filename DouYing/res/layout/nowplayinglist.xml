<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="5dip"
	>
	<ImageView android:id="@+id/allimageview"
		android:layout_width="100dip" android:layout_height="140dip"
		android:paddingLeft="5dip" android:paddingTop="5dip"
		android:paddingRight="5dip" android:paddingBottom="5dip" 
		/>

	<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="wrap_content"
		android:paddingLeft="5dip" android:paddingTop="5dip"
		android:paddingRight="5dip" android:paddingBottom="5dip">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:id="@+id/title_name" android:textSize="20sp"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="10dip"
				android:textColor="@color/lightwhite" />
			<RatingBar android:id="@+id/ratingbar" style="?android:attr/ratingBarStyleSmall"
				android:layout_marginLeft="5dip" android:layout_width="wrap_content"
				android:stepSize="1" android:isIndicator="true"
				android:layout_height="wrap_content" android:numStars="5"
				android:layout_gravity="center_vertical" />
		</LinearLayout>

		<TextView android:id="@+id/np_type" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:textColor="@color/lightwhite" />
			
		<TextView android:id="@+id/np_duration" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:textColor="@color/lightwhite" />
			
		<TextView android:id="@+id/np_area" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:textColor="@color/lightwhite" />
			
		<TextView android:id="@+id/np_cinema" android:textSize="16sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:textColor="@color/lightwhite" />
			
	</LinearLayout>

</LinearLayout>
