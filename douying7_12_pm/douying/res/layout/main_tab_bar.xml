<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabMainNav" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/main_tab_bar_selector"
	android:gravity="center_horizontal" android:orientation="vertical"
	android:padding="3dip">

	<ImageView android:id="@+id/ivIcon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="3dip" android:layout_marginBottom="1dip" />

	<TextView android:id="@+id/tvTitle" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="14dip"
		android:textColor="@color/black"/>

</LinearLayout>
