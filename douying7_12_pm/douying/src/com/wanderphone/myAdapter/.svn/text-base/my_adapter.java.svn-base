	public View getView(int position, View convertView, ViewGroup parent) {
		ViewHolder viewCache;
		if (convertView == null) {
			convertView = mInflater.inflate(R.layout.show_search_result, null);
			viewCache = new ViewHolder(convertView);
			convertView.setTag(viewCache);
		} else {
			viewCache = (ViewHolder) convertView.getTag();
		}
		
		/*convertView = LayoutInflater.from(getApplicationContext()).inflate(
				R.layout.show_search_result, null);
		*/
		//ViewHolder vh = new ViewHolder();// 行内容类型多 需要一个Object类型封装下,给
											// settag(),传给convertView的必须是OBJECT类型
		viewCache.iv = (ImageView) convertView.findViewById(R.id.allimageview);
		viewCache.tv = (TextView) convertView.findViewById(R.id.allname);
		convertView.setTag(viewCache);
//		mbp = aList.get(position);
		minfo = movie_info_list.get(position);

		try {
			URL aryURI = new URL(minfo.get_image_url());
			InputStream is = aryURI.openStream();
			Bitmap bm = BitmapFactory.decodeStream(is);
			is.close();
			viewCache.iv.setImageBitmap(bm);
			viewCache.tv.setText("影片:" + minfo.get_movie_name() + "\n导演:"
					+ minfo.get_director_name());
			viewCache.tv.setTextColor(Color.WHITE);
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		return convertView;
	}
