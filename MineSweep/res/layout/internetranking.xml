<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 
  <TextView android:id="@+id/this_time_rank" android:layout_width="fill_parent"
  	android:layout_height="wrap_content"/> 
  <TextView android:id="@+id/best_rank" android:layout_width="fill_parent"
  	android:layout_height="wrap_content"/>  
  
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
 	android:layout_height="match_parent"> 
 	
 	<Button android:id="@+id/go_on_game" android:layout_width="wrap_content"
 		android:layout_height="wrap_content" android:text="继续游戏"/> 
 	<Button android:id="@+id/anyother_level" android:layout_width="wrap_content"
 		android:layout_height="wrap_content" android:text="重选难度"
 		android:layout_toRightOf="@id/go_on_game"/>
 </RelativeLayout>
</LinearLayout>
